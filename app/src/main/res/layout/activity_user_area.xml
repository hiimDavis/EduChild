<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.educhild.UserArea"
    android:background="@drawable/wall"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradientbackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/parname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/colorPrimary"
                android:text="@string/parent_name"
                android:textColor="@color/colorAccent"
                android:textSize="42sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/parphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parent_phone_number"
                android:textColor="@color/colorAccent"
                android:textSize="23dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="59dp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/parmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parent_mail_address"
                android:textColor="@color/colorAccent"
                android:textSize="23dp"
                tools:layout_editor_absoluteY="96dp"
                tools:layout_editor_absoluteX="0dp" />

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="650dp"
                android:layout_height="502dp"
                android:layout_marginHorizontal="15dp"
                android:baselineAligned="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/kidname"
                    android:layout_width="210dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="6sp"
                    android:text="@string/KidProfile"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kidclass"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="0sp"
                    android:layout_marginTop="20sp"
                    android:text="Kid Class"
                    android:textColor="@color/colorPrimary"
                    android:textSize="36sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/kidage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0sp"
                    android:layout_marginTop="20sp"
                    android:text="Age"
                    android:textColor="@color/colorAccent1"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/kidPIC"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="170dp"
                    android:layout_marginTop="-180dp"
                    android:layout_marginVertical="-90dp"
                    android:background="@drawable/kid2"
                    android:baselineAligned="false"
                    android:contentDescription="@string/KidProfile"
                    android:elevation="5dp"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

</LinearLayout>
